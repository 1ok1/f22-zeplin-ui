<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_project"
        style="@style/profile_tab"
        android:tag="Projects"
        android:background="@color/tab_selected"
        android:src="@drawable/print" />

    <ImageView
        android:id="@+id/iv_bookmark"
        style="@style/profile_tab"
        android:tag="Bookmarks"
        android:src="@drawable/bookmark" />

    <ImageView
        android:id="@+id/iv_visible"
        style="@style/profile_tab"
        android:tag="Visible Projects"
        android:src="@drawable/visibility" />

    <ImageView
        android:id="@+id/iv_current_stats"
        style="@style/profile_tab"
        android:tag="Current Statistics"
        android:src="@drawable/current_stats" />

</LinearLayout>